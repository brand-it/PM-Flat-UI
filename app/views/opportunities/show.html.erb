  <dd><%= @opportunity.is_open %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sales_rep_sso) %>:</strong></dt>
  <dd><%= @opportunity.sales_rep_sso %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @opportunity.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:salesforce_id) %>:</strong></dt>
  <dd><%= @opportunity.salesforce_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:stage_name) %>:</strong></dt>
  <dd><%= @opportunity.stage_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:close_date) %>:</strong></dt>
  <dd><%= @opportunity.close_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:probability) %>:</strong></dt>
  <dd><%= @opportunity.probability %></dd>
  <dt><strong><%= model_class.human_attribute_name(:amount_approval) %>:</strong></dt>
  <dd><%= @opportunity.amount_approval %></dd>
  <dt><strong><%= model_class.human_attribute_name(:support_segment) %>:</strong></dt>
  <dd><%= @opportunity.support_segment %></dd>
  <dt><strong><%= model_class.human_attribute_name(:owner_name) %>:</strong></dt>
  <dd><%= @opportunity.owner_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:relational_junction_id) %>:</strong></dt>
  <dd><%= @opportunity.relational_junction_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:quotes_updated_at) %>:</strong></dt>
  <dd><%= @opportunity.quotes_updated_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:equifax_grade) %>:</strong></dt>
  <dd><%= @opportunity.equifax_grade %></dd>
  <dt><strong><%= model_class.human_attribute_name(:latest_calculated_mrr_cents) %>:</strong></dt>
