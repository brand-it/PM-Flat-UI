  <dt><strong><%= model_class.human_attribute_name(:academic_customer) %>:</strong></dt>
  <dd><%= @opportunity.academic_customer %></dd>
  <dt><strong><%= model_class.human_attribute_name(:contract_term_name) %>:</strong></dt>
  <dd><%= @opportunity.contract_term_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sale_type_name) %>:</strong></dt>
  <dd><%= @opportunity.sale_type_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:account_id) %>:</strong></dt>
  <dd><%= @opportunity.account_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:last_error) %>:</strong></dt>
  <dd><%= @opportunity.last_error %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              opportunities_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_opportunity_path(@opportunity), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              opportunity_path(@opportunity),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
